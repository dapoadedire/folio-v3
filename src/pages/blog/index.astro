---
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";
import Layout from "../../layouts/layout.astro";

const posts = (await getCollection("blog")).sort(
    (a, b) => a.data.publishDate.valueOf() - b.data.publishDate.valueOf()
);
---

<!doctype html>
<html lang="en">
    <Layout title="Dapo Adedire Blog" description="Dapo Adedire" ogImage="https://res.cloudinary.com/dapoadedire/image/upload/v1696253570/dapoadedire/Dapo_Adedire_2_hmuync.png">
		<section>
			<div
			class="my-8"
			>
				<h1 class="text-4xl font-bold ">Blog</h1>
			</div>
			<ul
			class="grid grid-cols-1 sm:grid-cols-2 gap-4 gap-y-8"
			>
				{
					posts.map((post) => (
						<li
						 class="p-2 border border-gray-800 rounded-lg shadow-sm"
						>
							<a href={`/blog/${post.slug}/`} class="flex flex-col gap-2">
								<img
									width={720}
									height={360}
									src={post.data.heroImage}
									alt=""
									class="rounded-lg"
								/>
								<h4 class="title">{post.data.title}</h4>
								<p class="date">
									<FormattedDate
										date={post.data.publishDate}
									/>
								</p>
							</a>
						</li>
					))
				}
			</ul>
		</section>
    </Layout>
</html>
